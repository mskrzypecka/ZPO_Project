@model ZPO_Projekt.Data.Entities.Order

@{
    ViewBag.Title = "EditOrder";
}

<h2>EditOrder</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="center col-4">
    <div class="info-section">New order</div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.DateOfOrder)
    @Html.HiddenFor(model => model.Client)
    @Html.HiddenFor(model => model.Foods)

    <div class="form-group">
        @Html.LabelFor(model => model.Delivery, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Delivery, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Delivery, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
